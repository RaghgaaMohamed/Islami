<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bige">

<ImageView
    android:id="@+id/icazkar"
    android:layout_width="50dp"
    android:layout_height="30dp"
    android:src="@drawable/az"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/zekrname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/icazkar"
        android:text="اذكار النوم"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"
        android:textColor="@color/brown"
       android:fontFamily="@font/azkar_font"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/icazkar"
        app:layout_constraintBottom_toBottomOf="@id/icazkar"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/brownblack"
        app:layout_constraintTop_toBottomOf="@id/icazkar"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>